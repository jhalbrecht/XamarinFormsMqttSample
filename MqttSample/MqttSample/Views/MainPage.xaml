<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MqttSample.Views.MainPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand">

        <Image Source="CheeseBurger.jpg" />

        <Label Text="An app to explore MQTT" />

        <Button Text="Navigate to Settings page"
                Command="{Binding SettingsNavigateCommand}" />

        <Button Text="Navigate to mqtt viewer page"
                Command="{Binding MqttNavigateCommand}" />
    </StackLayout>

</ContentPage>